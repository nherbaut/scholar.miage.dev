<tr

{{^success}}
    class="table-danger"
{{/success}}

{{#openaccess}}
    class="table-success openaccess"
{{/openaccess}}
{{^openaccess}}
    class="table-info paywall"
{{/openaccess}}
>

    {{#success}}
    <th scope="row"><a target="_blank" href="https://www.doi.org/{{doi}}">{{doi}}</a></th>
    {{/success}}
    {{^success}}
    <th scope="row"><a target="_blank" href="https://portal.issn.org/resource/ISSN/{{issn}}">{{issn}}</a></th>
    {{/success}}
    <td>{{year}}</td>
    <td>{{title}}</td>
    {{#success}}
    <td class="xref xref-abstract" style="width: 50%">{{abstract}}</td>
    <td class="cite_count xref">{{cite_count}}</td>
    <td class="ref_count xref">{{ref_count}}</td>
    <td class="subject xref">{{subject}}</td>
    <td>{{pub_title}}</td>
    <td><a target="_blank" href="{{same_auth_link}}">{{name}}</a></td>
    <td class="xref">{{affil}}</td>
    <td class="xref"><i class="flag {{country}}"></i></td>
    <td>
        {{#openaccess}}
            <a target="_blank" href="https://www.doi.org/{{doi}}">Open Access!</a></td>
        {{/openaccess}}
        {{^openaccess}}
            <a target="_blank" href="https://sci-hub.se/{{full_doi}}" class="hacker">Paywall</a>/<a href="https://scholar.google.com/scholar?q={{title}}" target="_blank">Google Scholar</a></td>
        {{/openaccess}}
    <td><a target="_blank" href="/snowball?title={{title}}">Snowball</a></td>
    <td >

         <input class="btn btn-info cite_btn" doi="{{doi}}" id="permalink" type="button" value="Copy Citation"
               onclick="get_doi_cite(this)"
               />

    </td>
    {{/success}}
    {{^success}}
        <td class="xref xref-abstract" style="width: 50%"></td>
        <td class="cite_count xref"></td>
        <td class="ref_count xref"></td>
        <td class="subject xref"></td>
        <td>{{pub_title}}</td>
        <td><a target="_blank" href="{{same_auth_link}}">{{name}}</a></td>
        <td class="xref"></td>
        <td class="xref"></td>
        <td><a href="https://scholar.google.com/scholar?q={{title}}" target="_blank">Google Scholar Link</a></td>
         <td><a target="_blank" href="/snowball?title={{title}}">Snowball</a></td>
        <td>-</td>
    {{/success}}
</tr>