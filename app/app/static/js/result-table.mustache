<tr
    {{#is_arxiv}}
    class="table-warning arxiv-row"
    {{/is_arxiv}}
    {{^is_arxiv}}
    {{#openaccess}}
    class="table-success openaccess"
    {{/openaccess}}
    {{^openaccess}}
    class="table-info paywall"
    {{/openaccess}}
    {{/is_arxiv}}
    data-doi="{{doi}}"
>

    <!-- Star column -->
    <td class="nowrap" style="width:48px; text-align:center;">
      <button type="button" class="btn btn-sm btn-link p-0 star-btn" title="Toggle star" data-doi="{{doi}}">
        <i class="far fa-star" aria-hidden="true"></i>
        <span class="visually-hidden">Star</span>
      </button>
    </td>

    
        <th scope="row">
          {{#peer_reviewed}}
          <img src="https://cdn.simpleicons.org/scopus/009639" alt="Scopus" title="Peer-reviewed (indexed)"
               style="width:18px;height:18px;vertical-align:middle;margin-right:6px;">
          {{/peer_reviewed}}
          {{#uncertain_review}}
          <img src="https://cdn.simpleicons.org/arxiv/B31B1B" alt="arXiv" title="Preprint / not peer-reviewed (arXiv)"
               style="width:18px;height:18px;vertical-align:middle;margin-right:6px;">
          {{/uncertain_review}}
          <a target="_blank" href="{{doi}}">{{doi}}</a>
        </th>
    
    
    <td>{{year}}</td>
    <td>
      {{title}}
      {{#has_abstract}}
      <i class="fas fa-file-alt text-muted ms-1" aria-hidden="true" title="{{abstract}}"></i>
      {{/has_abstract}}
    </td>
    

<!--------------------- Authors -------------------->
    <td> {{#authorsNamesAndLinks}}
            <a  href="{{link}}">{{display_name}}</a>
            {{#orcid}}
            <a class="author-orcidid" href="/venues?orcid={{orcid}}" authorID="{{orcid}}" target="_blank" rel="noopener noreferrer">
  <img src="/static/img/orcid.svg" alt="ORCID" style="width:20px; height:20px; vertical-align:middle;">
</a>

            {{/orcid}}
            {{#openalex}}
            <a class="author-openalexid" href="/venues?openalex={{openalex}}" authorID="{{openalex}}" target="_blank" rel="noopener noreferrer">
  <img src="/static/img/openalex.png" alt="openalex" style="width:20px; height:20px; vertical-align:middle;">
</a>

            {{/openalex}}
            
        {{/authorsNamesAndLinks}}
</td>
<!--------------------- Publication Title -------------------->

 <td>{{pub_title}}</td>



<!--------------------- Download Links -------------------->

 <td>
            {{#is_oa}}
            <a target="_blank" href="{{oa_link}}">Open Access version</a>
            {{/is_oa}}
            {{^is_oa}}
            <a href="https://scholar.google.com/scholar?q={{title}}" target="_blank">No OA Found, check Google Scholar</a>
            {{/is_oa}}</td>

<!--------------------- Snowball  -------------------->    

<td><a target="_blank" href="/snowball?title={{title}}">Snowball</a></td>

<!--------------------- Copy reference  -------------------->    

    <td>

            <input class="btn btn-info cite_btn" doi="{{doi}}" id="permalink" type="button" value="Copy Citation"
                   onclick="get_doi_cite(this)"
            />

        </td>
<!--------------------- Affiliation  -------------------->   

        <td class="xref">{{affil}}</td>

<!--------------------- Country For Affiliation  -------------------->      


<td class="xref"><span class="flag-icon flag-icon-{{country}}"></span>({{country}})</td>

<!--------------------- abstract  -------------------->      

<!-- <td class="xref xref-abstract" style="width: 50%">{{abstract}}</td> -->

<!--------------------- Publication Subject  -------------------->      

<td class="subject xref">{{subject}}</td>


<!--------------------- Ranking  -------------------->      

    {{#rank_source}}
<!--        <td class="xref">{{pub_rank}} ({{rank_source}})</td> -->
    {{/rank_source}}


<!--------------------- Publication H-Index  -------------------->      

